
@{
    ViewBag.Title = "Quản lý lịch khám";
}
<div class="d-flex align-items-center block-header">
    <div class="search-block">
        <input id="search" type="text" placeholder="Tìm kiếm...">
        <button id="btn-search"> <img src="~/images/search-cms.png" alt=""></button>
    </div>
    <button style="height: 40px; margin-left: 25px;" class="btn" type="button" data-bs-toggle="modal" data-bs-target="#modalAdd" id="btn-create">
        Thêm mới
    </button>
</div>
<table class="table table-border" id="myTable">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Ngày</th>
            <th>Thời gian</th>
            <th>Bệnh nhân</th>
            <th>Bác sĩ</th>
            <th>Hình thức khám</th>
            <th>Trạng thái</th>
            <th>Lý do hủy lịch</th>
            <th>Thao tác</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @* <div class="modal-header"> *@
            @*     <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
            @* </div> *@
            <div class="modal-body">
                <img src="~/images/delete.png" alt="Alternate Text" />
                <h5 class="modal-title text-red" id="exampleModalLabel">Chắc chắn xóa?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnModalCancel" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary btnModalDelete">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/PageScripts/QuanLyLichKham.js"></script>
}

