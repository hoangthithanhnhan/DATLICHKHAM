@page
@model DATLICHKHAM.Views.DangKy.IndexModel
@{

}

<div class="auth-background">
    <div class="overlay"></div>
    <form id="login" method="post">
        <h4 class="title">ĐĂNG KÝ</h4>
        <div class="login-form">
            <div class="form-group user">
                <input type="text" class="form-control" placeholder="Tên đăng nhập" id="tenDangNhapAdd" />
            </div>
            <div class="form-group pwd">
                <input type="password" class="form-control" placeholder="Mật khẩu" id="matKhauAdd" />
            </div>
            <div class="form-group pwd">
                <input type="text" class="form-control" placeholder="Họ tên" id="hotenAdd" />
            </div>
            <div class="form-group pwd">
                <input type="text" class="form-control" placeholder="Số điện thoại" id="soDienThoaiAdd" />
            </div>
            <div class="form-group pwd">
                <input type="email" class="form-control" placeholder="Email" id="emailAdd" />
            </div>
            <div class="main-event-detail main-btn">
                <div class="btn-event btn-special btn-red">
                    <button id="saveData" type="button" class="w-100 btn btn-lg btn-primary">Đăng ký</button>
                </div>
            </div>
        </div>
        <p class="auth-footer">Đã có tài khoản? <a class="auth-link text-red" asp-page="/Account/Login" asp-area="Identity">Đăng nhập</a></p>
    </form>
</div>

@section Scripts {
    <script src="~/PageScripts/Layout.js"></script>
    <script src="~/PageScripts/DangKy.js"></script>
}